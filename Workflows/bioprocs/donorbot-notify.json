{
	"$schema": "../../@schemas/statemachine-schema.json#",
	"Description": "DonorBotNotify",
	"InitialState": "Loop",
	"States": {
		"Loop": {
			"OnEntry": {
				"$res": "com.a2v10.procs:SequenceActivity",
				"Activities": [
					{
						"$res": "com.a2v10.procs:WaitCallbackActivity",
						"Tag": "DonorNotofication",
						"CorrelationValue": "{{params.donorId}}",
						"CorrelationExpression": "reply.donorId"
					},
					{
						"$res": "com.a2v10.procs.chatbot:SendMessageActivity",
						"BotEngine": "Telegram",
						"BotKey": "DonorBot",
						"ChatId": "{{params.ChatId}}",
						"Message": {
							"Type": "Text",
							"Text": "{{reply.message}}"
						}
					}
				]
			},
			"NextState": "Loop"
		}
	}
}