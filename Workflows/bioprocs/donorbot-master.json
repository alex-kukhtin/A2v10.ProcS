{
	"$schema": "../../@schemas/statemachine-schema.json#",
	"Description": "DonorBotMaster",
	"InitialState": "Init",
	"States": {
		"Init": {
			"OnEntry": {
				"$res": "com.a2v10.procs.chatbot:RegisterBotProcessingActivity",
				"BotEngine": "Telegram",
				"BotKey": "DonorBot",
				"ChatProcessIdentity": "bioprocs/donorbot-init"
			},
			"NextState": "Notify"
		},
		"Notify": {
			"OnEntry": {
				"$res": "com.a2v10.procs:SequenceActivity",
				"Activities": [
					{
						"$res": "com.a2v10.procs:WaitResumeActivity",
						"Bookmark": "NotifyDonor"
					},
					{
						"$res": "com.a2v10.procs:SendCallbackActivity",
						"Tag": "DonorNotofication",
						"DataExpression": "reply"
					}
				]
			},
			"NextState": "Notify"
		}
	}
}